<?xml version="1.0" encoding="utf-8"?>
<!--parent layout-->

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    >

    <!-- main layout-->
  <LinearLayout
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:background="@drawable/rounded">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.DayNight.DarkActionBar" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="165dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="350dp"
            android:layout_height="237dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/syskin_logos_transparent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="138dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="223dp"
            android:layout_marginBottom="40dp"
            android:text="Gallery"
            android:background="@drawable/button_border"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="138dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="47dp"
            android:layout_marginBottom="40dp"
            android:text="TextView"
            android:background="@drawable/button_border"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="You can start detecting skin cancer by taking a picture or importing a picture from gallery." />

        <ImageButton
            android:id="@+id/Gallerybutton2"
            android:layout_width="155dp"
            android:layout_height="210dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_border"
            android:src="@drawable/ic_gallery"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/Camerabutton"
            android:layout_width="155dp"
            android:layout_height="210dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_border"
            android:src="@drawable/ic_camera"
            android:textColor="@color/black" />


    </RelativeLayout>


  </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/main_navigationbar"
        />


</androidx.drawerlayout.widget.DrawerLayout>